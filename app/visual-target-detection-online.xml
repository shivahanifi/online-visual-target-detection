
<application>
<name>visual target detection online</name>
<version>1.0</version>

<!-- Modules -->

	<module>
		<name>yarpdev</name>
		<parameters>--from /projects/online-visual-target-detection/app/config/realsense_conf.ini</parameters>
		<node>docker</node>
	</module>

	<module>
		<name>yarpOpenPose</name>
		<parameters>--from /projects/online-visual-target-detection/app/config/yarpopenpose.ini</parameters>
		<node>docker</node>
	</module>

	<module>
		<name>yarpview</name>
		<parameters>--name /view/rgb --w 640 --h 480</parameters>
		<node>localhost</node>
	</module>

	<module>
		<name>yarpview</name>
		<parameters>--name /view/skeleton --w 640 --h 480</parameters>
		<node>localhost</node>
	</module>


<!-- Connections -->

	<connection>
		<from>/depthCamera/rgbImage:o</from>
		<to>/view/rgb</to>
		<protocol>mjpeg</protocol>
	</connection>

	<connection>
		<from>/depthCamera/rgbImage:o</from>
		<to>/yarpOpenPose/image:i</to>
		<protocol>mjpeg</protocol>
	</connection>

	<connection>
		<from>/yarpOpenPose/image:o</from>
		<to>/view/skeleton</to>
		<protocol>mjpeg</protocol>
	</connection>
	
	<connection>
		<from>/yarpOpenPose/propag:o</from>
		<to>/vtd/image:i</to>
		<protocol>mjpeg</protocol>
	</connection>

	<connection>
		<from>/yarpOpenPose/target:o</from>
		<to>/vtd/data:i</to>
	</connection>

	<connection>
	      	<from>/mutualgaze/image:o</from>
	      	<to>/view/eyecontact</to>
	      	<protocol>mjpeg</protocol>
	</connection>

</application>